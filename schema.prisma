generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Na vers√£o 6 isso funciona perfeitamente
}

// Esse deve ser o seu modelo final de User
model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  name       String
  age        Int
  // Campos para a surpresa
  mensagem   String?
  dataInicio String?
  
}
