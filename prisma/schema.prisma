generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Na vers√£o 6 isso funciona perfeitamente
}

// Esse deve ser o seu modelo final de User
model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  age     Int
  gifts   Gift[]
}

model Gift {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  mensagem   String
  dataInicio String
  createdAt  DateTime @default(now())
}
